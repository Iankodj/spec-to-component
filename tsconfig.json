{
    "compilerOptions": {
      "target": "ESNext",
      "lib": ["ESNext", "DOM"],
      "moduleResolution": "Node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strict": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "skipLibCheck": true,
      "declaration": true,
      "outDir": "dist"
    },
    "include": [
      "src"
    ],
  }
  